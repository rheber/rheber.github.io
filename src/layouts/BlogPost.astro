---
import FormattedDate from "../components/FormattedDate.astro";
import BaseLayout from "./BaseLayout.astro";

type Props = {
	title: string;
	pubDate: Date;
};

const { title, pubDate } = Astro.props;
---

<BaseLayout title={title}>
	<article>
		<div class="prose">
			<div class="title">
				<div class="date">
					<FormattedDate date={pubDate} />
				</div>
				<h1>{title}</h1>
				<hr />
			</div>
			<slot />
		</div>
	</article>
</BaseLayout>

<style>
	/* https://rwt.io/typography-tips/marks-ends-and-middles-end-marks-sections-and-dead-ends */
	:global(.prose>p:last-child:after) {
		content: "\2766";
		font-size: 1.5em;
		line-height: 0.5;
	}
</style>
